<starlang xmlns="http://www.staros.xyz/starcore/xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" scope="application">
	<class name="CIntentDevice">
		<private>
			<string name="m_deviceid"/>
			<string name="m_inputport"/>
			<string name="m_outputport"/>
			<!-- flowid list-->
			<list name="intentflowidlist" valuetype="string"/>
		</private>	
		<public>
			<function name="CIntentDevice">
				<parameters>
					<string name="deviceid"/>
					<string name="inputport"/>
					<string name="outputport"/>
				</parameters>
				<log>##### CIntentDevice is create #####</log>
				<log><![CDATA[CIntentDevice deviceid = <%=context.deviceid.toString()%>]]></log>
				<set name="thisclass.m_deviceid" value="context.deviceid.toString()"/>
				<set name="thisclass.m_inputport" value="context.inputport.toString()"/>
				<set name="thisclass.m_outputport" value="context.outputport.toString()"/>
			</function>
			<function name="Printintent">
				<syslog level="INFO"><![CDATA[CIntentDevice m_deviceid=<%=context.m_deviceid.toString()%>]]></syslog>
				<syslog level="INFO"><![CDATA[CIntentDevice m_inputport=<%=context.m_inputport.toString()%>]]></syslog>
				<syslog level="INFO"><![CDATA[CIntentDevice m_outputport=<%=context.m_outputport.toString()%>]]></syslog>
			</function>
			<function name="GetIntentDeviceId">
				<parameters>
					<string name="outintentdeviceid"/>
				</parameters>
				<set name="outintentdeviceid" value="thisclass.m_deviceid.toString()"/>
			</function>
			<function name="GetInputPort">
				<parameters>
					<string name="inputport"/>
				</parameters>
				<set name="inputport" value="thisclass.m_inputport.toString()"/>
			</function>
			<function name="GetOutputPort">
				<parameters>
					<string name="outputport"/>
				</parameters>
				<set name="outputport" value="thisclass.m_outputPort.toString()"/>
			</function>

			<function name="GetIntentDeviceInfo">
				<parameters>
					<string name="deviceid"/>
					<string name="inputport"/>
					<string name="outputport"/>
				</parameters>
				<set name="deviceid" value="thisclass.m_deviceid.toString()"/>
				<set name="inputport" value="thisclass.m_inputport.toString()"/>
				<set name="outputport" value="thisclass.m_outputPort.toString()"/>
			</function>

			<function name="SetIntentFlowId">
				<parameters>
					<string name="flowid"/>
				</parameters>
				<insert name="intentflowidlist" value="context.flowid.toString()"/>
			</function>
			
			<!--
				@brief		Close intent and delete flows,meters,drops
				@auth 		Wang Kang (kingsalone@sina.com)
				@date		2018/01/24
			-->
			<function name="DeactiveIntent">
				<!--DeactiveIntent-->
				<!--删除流表-->
				<!--删除meter-->
				<log level="101">CTunnelDevice DeactiveTunnel</log>
				<string name="oneintent"/>
				<string name="intentflowid"/>
				<for var="context.oneintent" in="thisclass.intentflowidlist">
					<set name="context.intentflowid" value="context.oneintent.value()"/>
					<function name="UnInstallFlow" class="FlowService">
						<parameters>
							<string name="datapathid" in="thisclass.m_deviceid.toString()"/>			
							<string name="flowid" in="context.intentflowid.toString()"/>
						</parameters>
					</function>
				</for>
			</function>
		</public>
	</class>	
</starlang>