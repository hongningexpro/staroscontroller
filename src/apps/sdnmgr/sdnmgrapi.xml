	<!--
		@brief		根据操作类型区分方法
		@auth 		YY
		@date		2017/09/14
		Input:
		Output:
	-->
	<events>
		<!--处理创建device 请求-->
		<onevent event="processCreateOneDeviceRequest">
			<log>enter processCreateOneDeviceRequest</log>
			<if cond="event.getParam('method').toString() == 'POST'">
				<then>
					<log level="100">processCreateOneDeviceRequest</log>
					
					<script><![CDATA[
						var json = JSON.parse(event.getParam('eventdata').toString());
						context.print(event.getParam('eventdata').toString());
					]]></script>
					<function name="testResponse"/>
				</then>
			</if>
		</onevent>
		<!--处理删除 device 请求-->
		<onevent event="processDeleteOneDeviceRequest">
			<log>enter processCreateOneDeviceRequest</log>
			<if cond="event.getParam('method').toString() == 'POST'">
				<then>
					<log level="100">processCreateOneDeviceRequest</log>
					
					<script><![CDATA[
						var json = JSON.parse(event.getParam('eventdata').toString());
						context.print(event.getParam('eventdata').toString());
					]]></script>
					
					<function name="testResponse"/>
				</then>
			</if>
		</onevent>
		<!--处理创建 policy 请求-->
		<onevent event="processCreateOnePolicyRequest">
			<log>enter processCreateOneDeviceRequest</log>
			<if cond="event.getParam('method').toString() == 'POST'">
				<then>
					<log level="100">processCreateOneDeviceRequest</log>
					
					<script><![CDATA[
						var json = JSON.parse(event.getParam('eventdata').toString());
						context.print(event.getParam('eventdata').toString());
					]]></script>
					<function name="testResponse"/>
				</then>
			</if>
		</onevent>
		<!--处理删除 policy 请求-->
		<onevent event="processDeleteOneDeviceRequest">
			<log>enter processCreateOneDeviceRequest</log>
			<if cond="event.getParam('method').toString() == 'POST'">
				<then>
					<log level="100">processCreateOneDeviceRequest</log>
					
					<script><![CDATA[
						var json = JSON.parse(event.getParam('eventdata').toString());
						context.print(event.getParam('eventdata').toString());
					]]></script>
					<function name="testResponse"/>
				</then>
			</if>
		</onevent>
		
		<!--处理得到 ports 请求-->
		<onevent event="processGetAllPortsOfDeviceRequest">
			<log>enter processCreateOneDeviceRequest</log>
			<if cond="event.getParam('method').toString() == 'POST'">
				<then>
					<log level="100">processCreateOneDeviceRequest</log>
					
					<script><![CDATA[
						var json = JSON.parse(event.getParam('eventdata').toString());
						context.print(event.getParam('eventdata').toString());
					]]></script>
					<function name="testResponse"/>
				</then>
			</if>
		</onevent>
	</events>


	<!--
		@brief		返回错误信息
		@auth 		YY
		@date		2017/09/14
		Input:
			@param resourceid 	资源id
			@param transportid   发送报文id
			@param description   错误信息
		Output:
	-->	
	<function name="ErrorDataResponse">
		<parameters>
			<long name="resourceid"/>
			<string name="transportid"/>
			<string name="description"/>
		</parameters>
		<string name="outjson"/>
		<script><![CDATA[
			var json = new Object();
			var one = new Object();
			one.resourceId = ""+context.resourceid.toLong();
			one.code = "-1";
			one.description = context.description.toString();						
			json.result = one;
			var strjson=JSON.stringify(json);
			context.outjson.setValue(strjson);
		]]></script>
		<function name="SendResponse" class="RestfulService">
			<parameters>
				<string name="transportid" in="context.transportid.toString()"/>
				<string name="json" in="context.outjson.toString()"/>
			</parameters>
		</function>
	</function>
	
	
	<!--qiulei-->
	<function name="testResponse">
		<string name="outjson"/>
		<script><![CDATA[
			var one=new Object();
				one.code = "0";
				one.description = "ok";
				
			var json = new Object();					
				json.result = one;
			var strjson=JSON.stringify(json);												
			context.outjson.setValue(strjson);
		]]></script>
		<function name="SendResponse" class="RestfulService">
			<parameters>
				<string name="transportid" in="event.getParam('transportid').toString()"/>
				<string name="json" in="context.outjson.toString()"/>
			</parameters>
		</function>
	</function>
</starlang>
